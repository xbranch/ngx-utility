{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@ngx-utility/core": [
        "dist/core/core",
        "dist/core"
      ],
      "@ngx-utility/files": [
        "dist/files/files",
        "dist/files"
      ],
      "@ngx-utility/dates": [
        "dist/dates/dates",
        "dist/dates"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
